  "devDependencies": {
    "@types/bun": "latest",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
